    @using BooksStore.Models

    @model IEnumerable<Book>

    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
            <div id="example">
                <strong><h1>Распродажа книг</h1></strong>
                
                <table id="grid">
                    <colgroup>
                        <col />
                        <col />
                        <col style="width:110px" />
                        <col style="width:120px" />
                        <col style="width:130px" />
                        <col style="width:100px" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th data-field="Name">Name</th>
                            <th data-field="Author">Author</th>
                            <th data-field="Price">Price</th>
                            <th >Buy/Delete</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td><p>@b.Name</p></td>
                                <td><p>@b.Author</p></td>
                                <td><p>@b.Price</p></td>
                                <td><p><a href="/Home/Buy/@b.Id">Buy </a><a class="btn info" href="/Home/Delete/@b.Id"> Delete</a></p></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <script>
                    $(document).ready(function() {
                        $("#grid").kendoGrid({
                            height: 550,
                            sortable: true
                        });
                    });
                </script>
            </div>

            <form method="post" action="">
            <table id="block_table">
                
                    <tr id="add_book">
                        <td><p>Enter Name of Book</p></td>

                        <td><input type="text" class="form-control" placeholder="Name of Book" name="Name" /> </td>
                    </tr>
                    <tr id="add_book">
                        <td><p>Author name</p></td>
                        <td>
                        <input class="form-control" type="text" placeholder="Name of Author" name="Author" />
                    </td>
                    </tr>
                    <tr id="add_book">
                        <td><p>Price</p></td>
                        <td>
                        <input class="form-control" type="text" placeholder="Price" name="Price" />
                        </td>
                    </tr>

                    <tr id="add_book"><td><input class="btn btn-info" type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
                </form>



