@model IEnumerable<BooksStore.Models.Item>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    
<div id="test-page">
    <h2>List of books</h2>
    <form method="post" action="/Working/Drop">
        <p>
            @Html.DropDownList("DropTypes", new SelectList(ViewBag.AllItems))
            <button type="submit" class="btn btn-primary" value="Отправить">Отправить</button>
        </p>
    </form>
    

    <form method="post" action="/Working/CreateItem">

        <p>
            @Html.DropDownList("DropCreate", new SelectList(ViewBag.AllCreates))
            <button type="submit" class="btn btn-primary" value="Отправить">Добавить</button>

    </form>
</div>
    
    


